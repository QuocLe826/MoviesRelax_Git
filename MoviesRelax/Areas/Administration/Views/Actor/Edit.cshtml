@model MoviesRelax.Models.ACTOR

@{
    ViewBag.Title = "Cập nhật thông tin";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveData", "Actor", new { type = "U" }, FormMethod.Post, new { name = "frm-add-actor", enctype = "multipart/form-data", @class = "form-data-input" }))
{
    
    <div class="text">

        @Html.HiddenFor(m => m.Code)

        <!--Name-->
        <div class="form-element">
            @Html.LabelFor(m => m.Name, new { @class = "label required" })
            @Html.TextBoxFor(m => m.Name, new { @class = "textbox-control", @placeholder = "Nhập tên diễn viên" })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "message-error" })
        </div>

        <div class="form-element">

            <!--DOB-->
            <div id="day-birth" class="form-child-element">
                @Html.LabelFor(m => m.DOB, new { @class = "label required" })
                @Html.TextBoxFor(m => m.DOB, new { type = "date", @class = "date-control" })
                @Html.ValidationMessageFor(m => m.DOB, null, new { @class = "message-error" })
            </div>

            <!--PlaceOBirth-->
            <div class="form-child-element" id="place-birth">
                @Html.LabelFor(m => m.PlaceOBirth, new { @class = "label required" })
                @Html.TextBoxFor(m => m.PlaceOBirth, new { @class = "textbox-control", @placeholder = "Nhập nơi sinh" })
                @Html.ValidationMessageFor(m => m.PlaceOBirth, null, new { @class = "message-error" })
            </div>

        </div>

        <!--Height-->
        <div class="form-element">
            @Html.LabelFor(m => m.Height, new { @class = "label required" })
            @Html.TextBoxFor(m => m.Height, new { @class = "textbox-control", @placeholder = "Nhập chiều cao" })
            @Html.ValidationMessageFor(m => m.Height, null, new { @class = "message-error" })
        </div>

        <!--Couple-->
        <div class="form-element">
            @Html.LabelFor(m => m.Couple, new { @class = "label" })
            @Html.TextBoxFor(m => m.Couple, new { @class = "textbox-control", @placeholder = "Nhập vợ chồng" })
            @Html.ValidationMessageFor(m => m.Couple, null, new { @class = "message-error" })
        </div>

        <!--Children-->
        <div class="form-element">
            @Html.LabelFor(m => m.Children, new { @class = "label" })
            @Html.TextBoxFor(m => m.Children, new { @class = "textbox-control", @placeholder = "Nhập con cái" })
            @Html.ValidationMessageFor(m => m.Children, null, new { @class = "message-error" })
        </div>

        <!--Prize-->
        <div class="form-element">
            @Html.LabelFor(m => m.Prize, new { @class = "label" })
            @Html.TextBoxFor(m => m.Prize, new { @class = "textbox-control", @placeholder = "Nhập giải thưởng" })
            @Html.ValidationMessageFor(m => m.Prize, null, new { @class = "message-error" })
        </div>

        <!--Descriptions-->
        <div class="form-element">
            @Html.LabelFor(m => m.Descriptions, new { @class = "label" })
            @Html.TextAreaFor(m => m.Descriptions, new { @class = "textbox-control", @placeholder = "Nhập mô tả" })
            @Html.ValidationMessageFor(m => m.Prize, null, new { @class = "message-error" })
        </div>

        <div class="form-element">
            <p class="buttons">
                <input type="submit" value="Lưu" id="button-save" class="button" />
                <a href="@Url.Action("Index", "Actor")" class="button" id="button-cancel">Huỷ bỏ</a>
            </p>
        </div>
    </div>

    <div class="image">
        <p>
            @{
                if (!string.IsNullOrEmpty(Model.PhotoPath) && File.Exists(Server.MapPath(Model.PhotoPath)))
                {
                    <img src="@Url.Content(Model.PhotoPath)" id="display-image" />
                }
                else
                {
                    <img src="~/Images/no-image.svg" id="display-image" />
                }
            }
        </p>
        <p>
            <label class="button" id="button-edit">
                Chọn hình ảnh
                <input type="file" name="PhotoImg" id="PhotoImg" accept="image/jpeg,image/png" onchange="uploadImage(event)" style="display: none"/>
            </label>
        </p>
    </div>
    
}